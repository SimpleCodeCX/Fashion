        <div id="un_login_xs" style="float:right;color:white;margin:10px 0 0 0;display:none;">

            <div class="fengefu">|</div>
            <div class="top_right">
                <a href="../../People/Login">登录</a>
            </div>
            <div class="fengefu">|</div>
            <div class="top_right">
                <a href="../../People/Register">注册</a>
            </div>
            <div class="fengefu">|</div>
        </div>
        <ul class="username" id="login_xs" style="display:block;">
            <li class="li_css" onclick="window.location.href = '../../People/Index';">
                <img id="img_touXiang" style="width:20px;margin-top:8px;" class="img_jiange" />
                <font id="theUserNameFont"></font>
                <ul class="userset">
                    <li class="li_css" onclick="window.location.href = '../../People/Index';">
                        <img src="~/Images/Layout-myzhuye.png" class="img_jiange" />我的主页
                    </li>
                    <li class="li_css" onclick="">
                        <img src="~/Images/Layout-set.png" class="img_jiange" />设置
                    </li>
                    <li class="li_css" onclick="">

                        <img src="~/Images/Layout-out.png" class="img_jiange" />退出
                    </li>
                </ul>
            </li>


        </ul>
    </div>
    <div id="Left_div" class="Left_div">
        <div id="touxiangkuang" class="touxiangkuang" onclick="window.location.href = '../People/Index'">
            <img id="theUserTouXiangImg" />
        </div>
        <div class="Left_div_user_name">
            <a id="theUserNameA" href="../People/Index"></a>
        </div>
        <div class="meau">
            <div class="Peaple_meau" style="margin-left:28%;" onclick="window.location.href = '../People/Focus'"><em class="People_meau_number">0</em><div>关注</div></div>
            <div class="Peaple_meau" onclick="window.location.href = '../People/Fans'"><em class="People_meau_number">0</em><div>粉丝</div></div>
            <div class="Peaple_meau" onclick="window.location.href = '../People/Topic'"><em class="People_meau_number">0</em><div>话题</div></div>

            <div class="Peaple_meau" style="margin-left:20%;" onclick="window.location.href = '../People/Asks'"><em class="People_meau_number">0</em><div>提问</div></div>
            <div class="Peaple_meau" onclick="window.location.href = '../People/Answers'"><em class="People_meau_number">0</em><div>回答</div></div>
            <div class="Peaple_meau" onclick="window.location.href = '../People/Collection'"><em class="People_meau_number">0</em><div>收藏</div></div>
            <div class="Peaple_meau" onclick="window.location.href = '../People/Get_Approval'"><em class="People_meau_number">0</em><div>获赞</div></div>
        </div>
    </div>

    <div id="Right_div" class="Right_div">
        @RenderBody()
    </div>
</body>

</html>
